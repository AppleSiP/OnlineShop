@model UserEditViewModel

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-6">
        <form method="post">
            <div>
                <h3>Редактирование пользователя</h3>
            </div>

            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
            <input type="hidden" name="email" value="@Model.Email" />
            <input type="hidden" name="phone" value="@Model.Phone" />

            <div class="row">
                <div class="col-8">
                    <label asp for="NewEmail">E-mail:</label>
                    <input class="form-control mb-1" asp-for="NewEmail" value="@Model.Email" />
                    <span asp-validation-for="NewEmail" />
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                    <label asp for="NewPhone">Телефон:</label>
                    <input class="form-control mb-1" asp-for="NewPhone" value="@Model.Phone" />
                    <span asp-validation-for="NewPhone" />
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                    <label asp for="FirstName">Имя:</label>
                    <input class="form-control mb-1" asp-for="FirstName" value="@Model.FirstName" />
                    <span asp-validation-for="FirstName" />
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                    <label asp for="LastName">Фамилия:</label>
                    <input class="form-control mb-1" asp-for="LastName" value="@Model.LastName" />
                    <span asp-validation-for="LastName" />
                </div>
            </div>

            <div>
                <button class="btn btn-success position-relative me-2" type="submit"
                    asp-area="Admin"
                    asp-controller="User"
                    asp-action="Edit">
                    Сохранить
                </button>
            </div>
        </form>
    </div>
</div>