@model ChangePasswordViewModel

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-6">
        <form method="post">
            <div>
                <h3>Изменить пароль</h3>
            </div>

            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
            <input type="hidden" name="email" value="@Model.Email" />

            <div class="row">
                <div class="col-8">
                    <label asp for="Password">Пароль:</label>
                    <input type="password" class="form-control mb-1" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                    <label asp for="ConfirmPassword">Повторите пароль:</label>
                    <input type="password" class="form-control mb-1" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
            </div>

            <div>
                <button class="btn btn-success position-relative me-2" type="submit"
                    asp-area="Admin"
                    asp-controller="User"
                    asp-action="ChangePassword">
                    Изменить
                </button>
            </div>
        </form>
    </div>
</div>