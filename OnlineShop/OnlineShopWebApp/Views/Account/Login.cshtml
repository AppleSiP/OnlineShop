@model LoginViewModel

<form method="post">
    <div>
        <h3>Авторизация</h3>
    </div>

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

    <div class="row">
        <div class="col-3">
            <label asp for="UserName">E-mail:</label>
            <input class="form-control mb-1" placeholder="example@mail.ru" asp-for="Email"/>
            <span asp-validation-for="Email" />
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <label asp for="Password">Пароль:</label>
            <input type="password" class="form-control mb-1" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <input class="mx-1" type="checkbox" name="rememberMe" value="true"/><label>Запомнить меня</label>
        </div>
    </div>

    <div>
        <button class="btn btn-success position-relative me-2" type="submit"
            asp-area=""
            asp-controller="Account"
            asp-action="Login">
            Войти
        </button>
        <a class="btn btn-warning position-relative me-2"
            asp-area=""
            asp-controller="Account"
            asp-action="Register"
            asp-route-ReturnUrl="@Model.ReturnUrl">
            Регистрация
        </a>
    </div>
</form>