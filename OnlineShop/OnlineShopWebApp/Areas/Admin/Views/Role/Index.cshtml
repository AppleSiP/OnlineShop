@model List<Role>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">

        @if (Model == null || Model.Count == 0 )
        {
            <h3>Список ролей пуст</h3>
        }
        else
        {
            <h3>Список ролей</h3>
            <table class="table table-striped table-hover" border="1">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th></th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th>@(i+1)</th>
                    <th>@Model[i].Name</th>
                    <th><a asp-area="Admin"
                        asp-controller="Role"
                        asp-action="Remove"
                        asp-route-rolename="@Model[i].Name" role="button">
                        Удалить</a>
                    </th>
                </tr>
            }
        </table>
        }
       
        <a class="btn btn-success"
            asp-area="Admin"
            asp-controller="Role"
            asp-action="Add" role="button">
            Добавить роль
        </a>
    </div>
</div>