@model List<UserViewModel>

<div class="row">

    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <h3>Список пользователей</h3>
        <table class="table table-striped table-hover" border="1">
            <thead>
                <tr>
                    <th>№</th>
                    <th>E-mail</th>
                    <th>Телефон</th>
                    <th></th>
                </tr>
            </thead>
            @if (Model != null && Model.Count != 0)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <th>@(i + 1)</th>
                        <th>@Model[i].Email</th>
                        <th>@Model[i].Phone</th>
                        <th><a asp-area="Admin" 
                                asp-controller="User"
                                asp-action="Details"
                                asp-route-email="@Model[i].Email">
                                Подробнее
                            </a>
                        </th>
                    </tr>
                }
            }
        </table>
        <a class="btn btn-success"
            asp-area="Admin"
            asp-controller="User"
            asp-action="Create" role="button">
            Регистрация нового пользователя
        </a>
    </div>
</div>