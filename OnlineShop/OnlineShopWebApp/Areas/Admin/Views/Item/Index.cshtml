@model List<ItemViewModel>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <h3>Список товаров</h3>
        <table class="table table-striped table-hover" border="1">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Наименование</th>
                    <th>Цена ₽</th>
                    <th>Материал</th>
                    <th>Описание</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th>@(i+1)</th>
                    <th>@Model[i].Name</th>
                    <th>@Model[i].Cost ₽</th>
                    <th>@Model[i].Material</th>
                    <th>@Model[i].Description</th>
                    <th><a asp-area="Admin" asp-controller="Item" asp-action="Edit" asp-route-itemid="@Model[i].Id" role="button">Редакторовать</a></th>
                    <th><a asp-area="Admin" asp-controller="Item" asp-action="Remove" asp-route-itemid="@Model[i].Id" role="button">Удалить</a></th>
                </tr>
            }
        </table>
        <a class="btn btn-success" asp-area="Admin" asp-controller="Item" asp-action="Add" role="button">Добавить товар</a>
    </div>
</div>