@model int

<a asp-area="" asp-controller="Compare" asp-action="Index">
    <button type="button" class="btn btn-outline-primary position-relative me-3">
        Сравнение
        <i class="bi bi-card-checklist"></i>
        @if (Model != 0)
        {
            <span class="position-absolute start-80 badge rounded-pill bg-danger">@Model </span>
        }
    </button>
</a>